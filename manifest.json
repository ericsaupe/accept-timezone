{
  "manifest_version": 2,
  "name": "Accept-Timezone",
  "version": "0.0.1",

  "description": "Adds the Accept-Timezone header to all requests",

  "author": "Eric Saupe",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["accept-timezone.js"],
    "persistent": true
  },
  "permissions": [
    "storage",
    "webRequest",
    "<all_urls>"
  ],
  "short_name": "Accept-Timezone"
}
